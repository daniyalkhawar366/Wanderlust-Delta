<% layout("/layouts/boilerplate") %>
<div class="container mt-5">
    <div class="search-header mt-5 mb-4 text-center p-4 rounded shadow">
        <h2 class="display-4 font-weight-bold"><span class="text-highlight"><%= query %></span>
        </h2>
    </div>

    <% if (searchResults.length > 0) { %>
        <div class="row">
            <% searchResults.forEach(listing => { %>
                <div class="col-md-4 mb-4">
                    <a href="/listings/<%=listing._id%>" class="listing-link">
                        <div class="card col listing-card">
                            <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height:20rem">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                              <p class="card-text">
                                <b><%=listing.title%></b>
                                <br>
                                &#8360; <%=listing.price.toLocaleString("en-PK")%> / night
                              </p>
                    
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p class="text-center">No results found for "<%= query %>".</p>
    <% } %>
</div>
