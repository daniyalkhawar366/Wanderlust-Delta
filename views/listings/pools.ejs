<% layout("/layouts/boilerplate")%>
<div class="category-header mt-5 mb-4 text-center">
  <h2 class="display-4 font-weight-bold text-primary">Dive into Luxury</h2>
  <p class="text-secondary">Splash into the best poolside retreats</p>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

    <% for(listing of poolListings) {%>
        <a href="/listings/<%=listing._id%>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height:20rem">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%=listing.title%></b>
                    <br>
                    &#8360; <%=listing.price.toLocaleString("en-PK")%> / night
                  </p>
        
                </div>
            </div>
        </a>
        <%}%>
</div>